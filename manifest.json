{
	"name": "M5Stop",
	"manifest_version": 2,
	"version": "1.0.11",
	"description": "Rimuove la spazzatura Grillesca dalla timeline facebook",
	
	"icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" },
		  	  
	"content_scripts": [
	{	
		"matches": [
			"http://*.facebook.com/*",
			"https://*.facebook.com/*"
		],
		"js": [
			"jquery.min.js",
			"wikiquote-api.js",
			"m5stop.js"
		],
		"css": ["m5stop.css"],
		"run_at": "document_end"
	}],
	
	"permissions": [
		"tabs",
		"https://it.wikiquote.org/*",
		"https://*.wikiquote.org/*",
		"https://it.wikiquote.org/w/api.php*",
		"https://it.wikiquote.org/w/api?*",
		"http://*/"
	],
	
	
	"web_accessible_resources": [
		"images/icon48.png",
		"images/icon128.png"
	]
}